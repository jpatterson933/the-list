@{
    ViewData["Title"] = "Secret Entry";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Secure login portal for LA Adventures List">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        .authentication-page {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1.25rem;
        }

        .authentication-card {
            background: #FEFAF5;
            padding: 3rem 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 0.625rem 2.5rem rgba(80, 46, 27, 0.15);
            border: 0.1875rem solid var(--burnt-orange);
            max-width: 28rem;
            width: 100%;
        }

        .authentication-card-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .authentication-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            display: block;
            line-height: 1;
        }

        .authentication-title {
            color: var(--russet);
            font-size: 2rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
            line-height: 1.2;
        }

        .authentication-description {
            color: var(--golden-brown);
            font-size: 1.125rem;
            margin: 0;
            line-height: 1.5;
        }

        .authentication-form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .form-field {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .form-field-label {
            color: var(--russet);
            font-size: 1rem;
            font-weight: 600;
            margin: 0;
        }

        .form-field-input {
            padding: 0.875rem 1rem;
            border: 0.125rem solid var(--burnt-orange);
            border-radius: 0.5rem;
            font-size: 1rem;
            font-family: 'Georgia', serif;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
            background: #FFFFFF;
            color: #3d3028;
        }

        .form-field-input:focus {
            outline: none;
            border-color: var(--golden-brown);
            box-shadow: 0 0 0 0.1875rem rgba(153, 101, 21, 0.2);
        }

        .form-field-input:focus-visible {
            outline: 0.125rem solid var(--golden-brown);
            outline-offset: 0.125rem;
        }

        .submit-button {
            padding: 0.875rem 1.5rem;
            background: linear-gradient(135deg, var(--russet) 0%, var(--burnt-orange) 100%);
            color: var(--warm-cream);
            border: none;
            border-radius: 0.5rem;
            font-size: 1.125rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            font-family: 'Georgia', serif;
            min-height: 2.75rem;
        }

        .submit-button:hover {
            transform: translateY(-0.125rem);
            box-shadow: 0 0.375rem 1.25rem rgba(128, 70, 27, 0.3);
        }

        .submit-button:active {
            transform: translateY(0);
        }

        .submit-button:focus-visible {
            outline: 0.125rem solid var(--golden-brown);
            outline-offset: 0.125rem;
        }

        .error-notification {
            color: #8B2E1F;
            background: #F8DDD7;
            padding: 0.875rem 1rem;
            border-radius: 0.5rem;
            border-left: 0.25rem solid #C41E3A;
            font-weight: 500;
            animation: slideInFromTop 0.3s ease-out;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .error-notification-icon {
            flex-shrink: 0;
        }

        @@keyframes slideInFromTop {
            from {
                opacity: 0;
                transform: translateY(-0.625rem);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 48rem) {
            .authentication-card {
                padding: 2rem 1.5rem;
            }

            .authentication-title {
                font-size: 1.75rem;
            }

            .authentication-description {
                font-size: 1rem;
            }
        }

        @@media (prefers-reduced-motion: reduce) {
            .submit-button:hover {
                transform: none;
            }

            .error-notification {
                animation: none;
            }
        }
    </style>
</head>
<body>
    <main class="authentication-page">
        <section class="authentication-card" aria-labelledby="authentication-title">
            <header class="authentication-card-header">
                <span class="authentication-icon" role="img" aria-label="Lock icon">üîê</span>
                <h1 id="authentication-title" class="authentication-title">Secret Entry</h1>
                <p class="authentication-description">Please enter your password to continue</p>
            </header>

            @if (ViewBag.Error)
            {
                <div class="error-notification" role="alert" aria-live="assertive">
                    <span class="error-notification-icon" role="img" aria-label="Error">‚ùå</span>
                    <span>Incorrect password. Please try again.</span>
                </div>
            }

            <form class="authentication-form" method="post" action="/auth/authenticate" aria-label="Login form">
                <div class="form-field">
                    <label for="password-field" class="form-field-label">
                        Password
                    </label>
                    <input
                        id="password-field"
                        type="password"
                        name="password"
                        class="form-field-input"
                        placeholder="Enter your password"
                        required
                        autofocus
                        aria-required="true"
                        aria-describedby="@(ViewBag.Error ? "error-message" : "")"
                        autocomplete="current-password"
                    />
                </div>
                <button type="submit" class="submit-button">
                    Enter
                </button>
            </form>
        </section>
    </main>
</body>
</html>
